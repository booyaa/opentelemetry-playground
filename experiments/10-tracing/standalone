#!/bin/bash

docker compose --file docker-compose-standalone.yml up --detach

clear

echo "🕸️ HTTP request sent to http://localhost:4567, getting logs..."

while ! curl -s http://localhost:4567 > /dev/null; do
  sleep 1
done

docker compose logs --no-log-prefix | grep GET
echo " "

# shellcheck disable=SC2162
read -p "Press enter to stop experiment"

docker compose down
